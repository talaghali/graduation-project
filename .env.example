# ==========================================
# VOICES OF GAZA - ENVIRONMENT CONFIGURATION
# ==========================================

# Application Settings
APP_NAME="Voices Of Gaza"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_TIMEZONE=UTC
APP_URL=http://127.0.0.1:8000

# Localization
APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

# Maintenance Mode
APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

# Server Configuration
PHP_CLI_SERVER_WORKERS=4

# Security
BCRYPT_ROUNDS=12

# ==========================================
# LOGGING
# ==========================================

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# ==========================================
# DATABASE CONFIGURATION
# ==========================================
# MySQL database configuration
# Update these values according to your setup

DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=graduation_project
DB_USERNAME=root
DB_PASSWORD=

# ==========================================
# SESSION CONFIGURATION
# ==========================================

SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# ==========================================
# CACHE & QUEUE
# ==========================================

CACHE_STORE=database
CACHE_PREFIX=

QUEUE_CONNECTION=database

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local

# ==========================================
# MEMCACHED
# ==========================================

MEMCACHED_HOST=127.0.0.1

# ==========================================
# REDIS
# ==========================================

REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# ==========================================
# MAIL CONFIGURATION
# ==========================================
# For development, mail is logged to storage/logs (use 'log')
# For production, configure SMTP settings below
#
# Common providers:
# - Gmail: smtp.gmail.com, port 587, encryption tls
# - Mailgun: smtp.mailgun.org, port 587, encryption tls
# - Mailtrap (testing): smtp.mailtrap.io, port 2525
# - SendGrid: smtp.sendgrid.net, port 587, encryption tls

MAIL_MAILER=log
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@voicesofgaza.org"
MAIL_FROM_NAME="${APP_NAME}"

# Admin email for donation notifications
ADMIN_NOTIFICATION_EMAIL="admin@voicesofgaza.org"

# ==========================================
# PAYPAL CONFIGURATION
# ==========================================
# Get your credentials from https://developer.paypal.com
# Mode: sandbox for testing, live for production

PAYPAL_MODE=sandbox
PAYPAL_SANDBOX_CLIENT_ID=
PAYPAL_SANDBOX_CLIENT_SECRET=
PAYPAL_LIVE_CLIENT_ID=
PAYPAL_LIVE_CLIENT_SECRET=
PAYPAL_CURRENCY=USD

# ==========================================
# AWS SERVICES (Optional)
# ==========================================

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# ==========================================
# VITE
# ==========================================

VITE_APP_NAME="${APP_NAME}"

# ==========================================
# SETUP INSTRUCTIONS
# ==========================================
# 1. Copy this file to .env
#    cp .env.example .env
#
# 2. Generate application key
#    php artisan key:generate
#
# 3. Update database credentials above
#
# 4. Run migrations
#    php artisan migrate
#
# 5. Start development server
#    php artisan serve
# ==========================================
